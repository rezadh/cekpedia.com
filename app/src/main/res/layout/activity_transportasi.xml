<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.cekpedia.HotelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0288D1" />

        <SearchView
            android:id="@+id/cari"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFF"
            android:background="@drawable/search_layout"
            android:drawableLeft="@drawable/ic_search"
            android:queryHint="apa yang anda cari ?"
            android:iconifiedByDefault="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cari"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cari"
            android:layout_marginTop="567dp"
            android:src="@drawable/ic_home_black_24dp"
            android:tint="@color/colorvector" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listviewtransportasi">
            <!--android:layout_marginBottom="?android:attr/actionBarSize"-->


        </ListView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFF"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:id="@+id/result_list_transportasi">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>